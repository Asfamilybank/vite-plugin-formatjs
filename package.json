{
  "name": "vite-plugin-formatjs",
  "version": "0.1.0",
  "description": "A Vite plugin that integrates FormatJS for message extraction, compilation, and build-time code transformation with hot reload support",
  "keywords": [
    "vite",
    "plugin",
    "vite-plugin",
    "formatjs",
    "react-intl",
    "i18n",
    "internationalization",
    "localization",
    "intl",
    "typescript"
  ],
  "author": "Asfamilybank",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Asfamilybank/vite-plugin-formatjs.git"
  },
  "bugs": {
    "url": "https://github.com/Asfamilybank/vite-plugin-formatjs/issues"
  },
  "homepage": "https://github.com/Asfamilybank/vite-plugin-formatjs#readme",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "commitlint": "commitlint --edit",
    "test": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@10.12.4",
  "peerDependencies": {
    "vite": "^3.0.0 || ^4.0.0 || ^5.0.0 || ^6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@eslint/js": "^9.30.1",
    "@formatjs/cli": "^6.7.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.19.6",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "lefthook": "^1.12.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "@formatjs/cli-lib": "^6.6.6",
    "@formatjs/icu-messageformat-parser": "^2.11.2",
    "@formatjs/ts-transformer": "^3.14.0",
    "fs-extra": "^11.3.0",
    "glob": "^10.4.5",
    "json-stable-stringify": "^1.3.0"
  }
}